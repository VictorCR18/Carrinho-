generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String
  categoria  String
  preco      Float
  descricao  String?
  imagem     String?
  quantidade Int     @default(0)

  @@map("produtos")
}

enum Role {
  USER
  ADMIN
}

model Usuario {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String
  role  Role   @default(USER)

  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@map("usuarios")
}
